<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="company_description_inherited" name="Company Description" inherit_id="website.company_description">
        <xpath expr="//a" position="replace">
            <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
            <meta name="viewport" content="initial-scale=1.0, user-scalable=no" />
            <style type="text/css">
                body, html {width: 100%;height: 100%;margin:0;font-family:"微软雅黑";}
                #baidu_map{width:100%;height:250px;}
                p{margin-left:5px; font-size:14px;}
            </style>
            <div id="baidu_map"></div>
            <script type="text/javascript">
                var map = new BMap.Map("baidu_map");
                map.centerAndZoom(new BMap.Point(121.480237, 31.236305), 11);
                map.enableScrollWheelZoom();
                var local = new BMap.LocalSearch(map, {
                    renderOptions:{map: map, autoViewport: true}
                });
                local.search('<t t-esc="res_company.street"/>');
            </script>
        </xpath>
    </template>

    <template id="s_company_description" name="Company Description">
        <section class="s_company_description">
            <div class="container">
                <div class="row">
                    <t t-call="website_baidu_map.company_description_inherited"/>
                </div>
            </div>
        </section>
    </template>

    <template id="website_baidu_map" inherit_id="website.snippets" name="Company Description">
        <xpath expr="//div[@id='snippet_feature']//t[@t-snippet][last()]" position="after">
            <t t-snippet="website_baidu_map.s_company_description" t-thumbnail="/website/static/src/img/snippets_thumbs/s_picture.png"/>
        </xpath>
    </template>
</odoo>

<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>

    <record id="view_occupancy_performance_graph" model="ir.ui.view">
         <field name="name">view.occupancy.performance.report</field>
         <field name="model">occupancy.performance.report1</field>
         <field name="arch" type="xml">
             <graph string="Investment Analysis" type="pivot" stacked="True">
                     <field name="purchase_date" interval="year" type="col"/>
                     <field name="name" type="row"/>
                     <field name="occupancy_rates" type="measure"/>
             </graph>
         </field>
    </record>

    <record id="view_occupancy_performance_search" model="ir.ui.view">
        <field name="name">view.occupancy.performance.search</field>
        <field name="model">occupancy.performance.report1</field>
        <field name="arch" type="xml">
            <search string="Investment Analysis">
                <separator/>
                <field name="name"/>
                <field name="type_id"/>
                <group expand="1" string="Group By">
                    <filter string="Property" name="Property" context="{'group_by':'name'}"/>
                    <separator/>
                    <filter string="Purchase Month" context="{'group_by':'purchase_date:month'}"/>
                    <separator/>
                    <filter string="Property Type" name="Type" context="{'group_by':'type_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_occupancy_performance_report" model="ir.actions.act_window">
        <field name="name">Occupancy Performance Analysis</field>
        <field name="res_model">occupancy.performance.report1</field>
        <field name="view_type">form</field>
        <field name="view_mode">graph</field>
        <field name="search_view_id" ref="view_occupancy_performance_search"/>
        <field name="view_id" ref="view_occupancy_performance_graph"/>
    </record>

    <menuitem action="action_occupancy_performance_report" id="menu_report_occupancy_performance" parent="property_management.menu_report_sub" sequence="10"/>

</data>
</openerp>
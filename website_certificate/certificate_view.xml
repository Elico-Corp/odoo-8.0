<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="res_config_settings_view_form_beian" model="ir.ui.view">
            <field name="model">res.config.settings</field>
            <field name="name">website.config.settings.form.inherit</field>
            <field name="inherit_id"
                   ref="website.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <div id="website_settings" position="inside">
                    <div class="col-12 col-lg-6 o_setting_box"
                         id="beian_setting">
                        <div class="o_setting_right_pane">
                            <div class="row">
                                <label for="certificate_number1_url" class="col-md-3 o_light_label"/>
                                <field name="certificate_number1_url"
                                       placeholder="http://www.example.com/certificate"/>
                            </div>
                            <div class="row">
                                <label for="certificate_number1" class="col-md-3 o_light_label"/>
                                <field name="certificate_number1"
                                       placeholder="沪ICP备XXXXXXXX号"/>
                            </div>
                            <div class="row">
                                <label for="certificate_url1" class="col-md-3 o_light_label"/>
                                <field name="certificate_url1"
                                       placeholder="http://www.example.com/certificate"/>
                            </div>
                            <div class="row">
                                <label for="certificate_logo1" class="col-md-3 o_light_label"/>
                                <field name="certificate_logo1" widget="image"
                                       class="oe_avatar oe_left"/>
                            </div>
                            <div class="row">
                                <label for="certificate_number2_url" class="col-md-3 o_light_label"/>
                                <field name="certificate_number2_url"
                                       placeholder="http://www.example.com/certificate"/>
                            </div>
                            <div class="row">
                                <label for="certificate_number2" class="col-md-3 o_light_label"/>
                                <field name="certificate_number2"
                                       placeholder="沪ICP备XXXXXXXX号"/>
                            </div>
                            <div class="row">
                                <label for="certificate_url2" class="col-md-3 o_light_label"/>
                                <field name="certificate_url2"
                                       placeholder="http://www.example.com/certificate"/>
                            </div>
                            <div class="row">
                                <label for="certificate_logo2" class="col-md-3 o_light_label"/>
                                <field name="certificate_logo2"
                                       widget="image"
                                       class="oe_avatar oe_left"/>
                            </div>
                        </div>
                    </div>
                </div>
            </field>
        </record>

        <template id="certificate" inherit_id="website.layout_footer_copyright" name="Company Certificate">
            <xpath expr="//footer//div/span[@t-field='res_company.name']" position="after">
                <span>-
                    <a t-attf-href="#{website.certificate_url1}" target="_BLANK">
                       <span t-field="website.certificate_logo1"
                             t-options='{"widget": "image", "style": "display: inline;
                             vertical-align: baseline; width: 20px; height: 20px;"}'/>
                    </a>
                    <a t-attf-href="#{website.certificate_number1_url}" target="_BLANK">
                        <span t-field="website.certificate_number1"/>
                    </a>
                </span>
                <span>-
                    <a t-attf-href="#{website.certificate_url2}" target="_BLANK">
                       <span t-field="website.certificate_logo2"
                             t-options='{"widget": "image", "style": "display: inline;
                              vertical-align: baseline; width: 20px; height: 20px;"}'/>
                    </a>
                    <a t-attf-href="#{website.certificate_number2_url}" target="_BLANK">
                        <span t-field="website.certificate_number2"/>
                    </a>
                </span>
            </xpath>
        </template>
    </data>
</odoo>

<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record id="view_website_config_settings_inherited" model="ir.ui.view">
            <field name="model">website.config.settings</field>
            <field name="name">website.config.settings.form.inherit</field>
            <field name="inherit_id" ref="website.view_website_config_settings"/>
            <field name="arch" type="xml">
                <div name="social_googleplus" position="after">
                    <label for="beian_number"/>
                    <div class="oe_inline">
                        <field name="beian_number" placeholder="沪ICP备12005091号"/>
                    </div>
                    <label for="beian_url"/>
                    <div class="oe_inline">
                        <field name="beian_url" placeholder="http://www.sgs.gov.cn/lz/licenseLink.do"/>
                    </div>

                    <label for="logo"/>
                    <div class="oe_inline">
                        <field name="logo" widget="image" class="
                            oe_avatar oe_left"/>
                    </div>
                </div>
            </field>
        </record>
        <template id="beian" inherit_id="website.layout_footer_copyright" name="Company Beian">
            <xpath expr="//footer//div/span[@t-field='res_company.name']" position="after">
                <span>-
                    <a t-attf-href="#{website.beian_url}" target="_BLANK">
                       <span t-field="website.logo" t-field-options='{"widget": "image", "style": "display: inline; vertical-align: baseline;"}'/>
                    </a>
                    <span t-field="website.beian_number"/>
                </span>
            </xpath>
        </template>
    </data>
</openerp>
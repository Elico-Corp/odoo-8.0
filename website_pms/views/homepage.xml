                        <div class = "col-md-2 bottom_img">
                                <img src= "/website_pms/static/src/img/naked-real-estate2.jpg" class = "img-thumbnail img img-responsive"/>
                        </div>
                        <div class = "col-md-2 bottom_img">
                                <img src= "/website_pms/static/src/img/thumbPhoenix.png" class = "img-thumbnail img img-responsive"/>           
                        </div>
                    </div>
                </div>


<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="website_captcha_nogoogle.captcha" name="captcha">
        <div class="form-group row form-field o_website_form_required_custom">
            <label class="col-lg-3 col-md-4 col-form-label" for="captcha_response_field">Captcha</label>
            <div class="col-lg-7 col-md-8">
                <img t-att-src="'data:image/png;base64,%s' % website.captcha" />
                <input class="form-control o_website_form_input"
                       name="captcha_response_field" required=""/>
                <input name="captcha_challenge_field"
                       t-att-value="website.captcha_crypt_challenge" type="hidden"/>
            </div>
        </div>
    </template>
</odoo>

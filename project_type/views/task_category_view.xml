<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_task_form2" model="ir.ui.view">
            <field name="name">project_task_form_view_type</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_form2"/>
            <field name="arch" type="xml">
                <field name="project_id" position="after">
                    <field name="task_type_id"/>
                </field>
            </field>
        </record>
        <record id="view_task_type_form" model="ir.ui.view">
            <field name="name">task.category.form</field>
            <field name="model">task.category</field>
            <field eval="1" name="priority"/>
            <field name="arch" type="xml">
                <form >
                    <group>
                        <group>
                            <field name="name"/>
                        </group>
                        <group>
                            <field name="description"/>
                        </group>
                    </group>
                </form>
            </field>
        </record>
        <act_window id="action_type_task"
        name="Types"
        res_model="task.category"
        view_mode="tree,form"/>

        <menuitem id="menu_type_task"
            name="Types"
            sequence="20"
            parent="project.menu_project_config"
            action="action_type_task"/>
    </data>
</odoo>
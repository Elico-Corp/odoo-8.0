<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="products_quick_quotation_view" model="ir.ui.view">
        <field name="name">Products Quotation View</field>
        <field name="model">product.product</field>
        <field name="arch" type="xml">
            <quickquotationview />
        </field>
    </record>

    <record id="template_quick_quotation_view" model="ir.ui.view">
        <field name="name">Products Quotation View</field>
        <field name="model">product.template</field>        
        <field name="arch" type="xml">
            <quickquotationview />
        </field>
    </record>

    <record id="product.product_normal_action_sell" model="ir.actions.act_window">
        <field name="view_mode">kanban,tree,form,activity,quickquotationview</field>
    </record>

    <record id="sale.product_template_action" model="ir.actions.act_window">
        <field name="view_mode">kanban,tree,form,activity,quickquotationview</field>
    </record>    

</odoo>
<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    
    <t t-name="QuickQuotation.buttons">
        <div class="btn-group">
            <div class="btn">
                <button accesskey="c" class="btn btn-primary btn-xs quick-quotation-new" type="button" title="Create" data-option="so">Create Sale Quotation</button>
                <button accesskey="c" class="btn btn-primary btn-xs quick-quotation-new" type="button" title="Create" data-option="po">Create Purchase Quotation</button>
            </div>
            <div class="qq_dropdown">
                <t t-if="res_partner.length > 0">
                    <select class="form-control qq_customers pull-right" id="quick_quotation_customer">
                        <option value="all_customers" data="all_customers">All Customers</option>
                        <t t-if="res_partner">
                            <t t-foreach="res_partner" t-as="partner">
                                <option t-att-value="partner.id" t-att-data="partner.id"><t t-esc="partner.name" /></option>
                            </t>
                        </t>
                    </select>
                </t>
            </div>
        </div>
    </t>

    <t t-name="QuickQuotationLine">
        <tr>
            <td>
                <span></span>
            </td>
            <td t-att-data-line_product_id="product_id" id="line_product_id" class="d-none">
                <t t-esc="product_id" />
            </td>
            <td>
                <t t-esc="product_name" />
            </td>
            <td>
                <input type="text" class="qq_input_field" t-att-data-product_qty="product_id" id="line_product_qty" value="1" />
            </td>
            <td>
                <button type="button" id="delete_from_cart" class="btn btn-primary delete_from_cart" t-att-value="product_id">
                    <i class="fa fa-trash"></i>
                </button>
            </td>
        </tr>
    </t>

    <t t-name="QuickQuotationBox">
        <t t-if="widget.state.data">
            <t t-foreach="widget.state.data" t-as="product">
                <div class="qq_o_kanban_record" id="qq_product_box" t-att-data-box_id="product.id">
                    <div class="qq_o_kanban_image">
                        <t t-if="product.id">
                            <img t-attf-src="/web/image?model=product.product&amp;field=image_128&amp;id=#{product.id}" />
                        </t>
                        <span class="qq_shopping_cart" t-att-data-product_name="product.display_name" t-att-data-product_id="product.id">
                            <a class="fa fa-1x fa-shopping-cart add_to_cart" t-att-data-product_name="product.display_name" t-att-data-product_id="product.id" id="add_to_cart" />
                        </span>
                        <span class="qq_price_tag">
                            <t t-esc="product.currency_id[1]" />
                            <t t-esc="product.list_price" />
                        </span>
                    </div>
                    <div class="qq_product_name">
                        <t t-esc="product.display_name" />
                    </div>
                </div>
            </t>
        </t>
    </t>

    <t t-name="QuickQuotationView">
        <div class="row qq_row_margin">
            <div class="col-9 qq_products_area" id="qq_products_list_area"></div>

            <div class="col-3 qq_products_line_area">
                <table class="table linecounted" id="qq_product_table">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col" class="d-none">Product ID</th>
                            <th scope="col">Product Name</th>
                            <th scope="col">Qty</th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </t>

</templates>
<odoo>

    <record model="ir.ui.view" id="view_general_settings_auth_cas_form">
        <field name="name">base.config.settings.auth_cas</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='integration']" position="after">
                <h2>CAS Authentication</h2>
                <div class="row mt16 o_settings_container" name="authentication_cas">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="cas_activated"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="cas_activated"/>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                        </div>
                        <div class="o_setting_right_pane">
                            <div class="text-muted">
                                Code d'activation du niveau 2 Oikos Impact
                            </div>
                            <div class="content-group" >
                                <div class="row mt16">
                                    <label class="col-lg-3 o_light_label" for="cas_server"/>
                                    <field name="cas_server"/>
                                    <div class="cas_check" style="padding:24px 10px">
                                        <button help="Check settings of CAS server"
                                                type="object"
                                                name="check_cas_server"
                                                icon="/auth_cas/static/src/img/gtk-apply.png"/>
                                        </div>
                                </div>
                                <div class="row mt16">
                                    <label class="col-lg-3 o_light_label" for="cas_server_port"/>
                                    <field name="cas_server_port"/>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="cas_create_user"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="cas_create_user"/>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>

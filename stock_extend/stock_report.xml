<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="barcode60x40" model="report.paperformat">
            <field name="name">条码标签60mmx40mm</field>
            <field name="format">custom</field>
            <field name="default" eval="True" />
            <field name="page_height">40</field>
            <field name="page_width">60</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">1</field>
            <field name="margin_bottom">0</field>
            <field name="margin_left">2</field>
            <field name="margin_right">0</field>
            <field name="header_line" eval="False" />
            <field name="header_spacing">0</field>
            <field name="dpi">800</field>
        </record>

        <report 
            string="Stock Move Barcode"
            id="action_report_move_barcode" 
            model="stock.move" 
            report_type="qweb-pdf"
            name="stock_extend.report_move_barcode" 
            file="stock_extend.report_move_barcode"
        />

        <report 
            string="Stock Pack Barcode" 
            id="action_report_pack_barcode" 
            model="stock.pack.operation" 
            report_type="qweb-pdf"
            name="stock_extend.report_pack_barcode" 
            file="stock_extend.report_pack_barcode"
        />

        <report 
            string="Stock Picking Barcode" 
            id="action_report_picking_barcode" 
            model="stock.picking" 
            report_type="qweb-pdf" 
            name="stock_extend.report_picking_barcode" 
            file="stock_extend.report_picking_barcode"
        />

        <record id="action_report_move_barcode" model="ir.actions.report.xml">
            <!--field name="type">ir.actions.report.xml</field>
            <field name="name">Stock Move Barcode</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_file">stock_extend.report_move_barcode</field>
            <field name="report_rml">stock_extend.report_move_barcode</field>
            <field name="report_name">stock_extend.report_move_barcode</field>
            <field name="model">stock.move</field-->
            <field name="paperformat_id" ref="barcode60x40"/>
        </record>
        
        <record id="action_report_pack_barcode" model="ir.actions.report.xml">
            <field name="paperformat_id" ref="barcode60x40"/>
        </record>

        <record id="action_report_picking_barcode" model="ir.actions.report.xml">
            <field name="paperformat_id" ref="barcode60x40"/>
        </record>
    </data>
</openerp>
